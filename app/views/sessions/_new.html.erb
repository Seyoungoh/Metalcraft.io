<div id="modal_login" class="modal fade" style="overflow:hidden;">
	<div class="modal-dialog">
		<div class="modal-content">
			<%=form_for :sessions, url: sessions_path, html: {class: "form-horizontal"} do |f| %>
				<div class="modal-header">
					<button class="close" type="button", data-dismiss="modal", aria-hidden= true>Close</button>
					<h2 class="modal-title">Login</h2>
					<small>Small Text</small>
				</div>
				<div class="modal-body">
					<div class="control-group">
						<%= f.label :email, class: 'control-label' %>
						<%= f.text_field :email %>
					</div>
					<div class="control-group">
						<%= f.label :password, class: 'control-label' %>
						<%= f.password_field :password %>
					</div>
				</div>
				<div class="modal-footer">
					<div class="control-group">
						<div class="controls">
							<%= f.submit "Sign In", class: "btn btn-success" %>
						</div>
					</div>
				</div>
			<% end %>
		</div>
	</div>
</div>